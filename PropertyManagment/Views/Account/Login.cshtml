@using PropertyManagment
@model PropertyManagment.User
@{
    ViewBag.Title = "Login";
    PropertyManagmentEntities db = new PropertyManagmentEntities();
    var userTypes = new List<SelectListItem>()
{
new SelectListItem(){ Text="Admin", Value="admin"},
new SelectListItem(){ Text="Agent", Value="agent"},
new SelectListItem(){ Text="Client", Value="client"},

};
}

